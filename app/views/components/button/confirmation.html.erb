  %></code></pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Listen for form submissions
  document.addEventListener('submit', (e) => {
    if (e.target.action.includes('/test_submit')) {
      e.preventDefault();
      alert('Form submitted successfully!');
    }
  });
</script>